                <div class="col-md-12" float="right">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
                    <!-- <span id="topBtnSpan"></span> -->
                    <button class="btn btn-warning text-white" data-bs-toggle="modal" data-bs-target="#loginModal">Log in</button>
                </div>
            </div>

            <div class="hamburger-menu">
                <div class="bar"></div>
            </div>
            <div class="nav-list">
                <ul>
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#aboutContainer">About</a></li>
                    <li><a href="#gallery">Work</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>

            
        </div>

                <!-- MOBILE FOOTER MENU -->
                    <!-- <div class="container" id="quickMenu"> -->
        <div class="mobile-nav">
            <ul>
                <li class="welcome-msg">
                Welcome, 
                <%=user.name %>
                </li>
                <li><a href="#">Home</a></li>
                <li><a href="#aboutContainer">About</a></li>
                <li><a href="#gallery">Work</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <div class="mobileLoginBtns">
                <% if (user) { %>
                <a class="btn btn-reg" href="/logout">Log out</a>
                <% } else { %>
                <a class="btn btn-login" href="/login">Log in</a>
                <a class="btn btn-reg" href="/signup">Register</a>
                <% } %>

                <!-- <button class="btn-reg" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
                <button class="btn-login" data-bs-toggle="modal" data-bs-target="#loginModal">Log in</button> -->
            </div>
        </div>
        
    </nav>

   

        <!--MODAL DESIGN-->
    <div class="modal" id="registerModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registration Form</h5>
                </div>
                <div class="modal-body">
                    <form action="/signup" method="post">
                    <!-- <form action="../../routes/auth.js" method="post"> -->
                        <label for="name">Username</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Your Name"><br>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Your Email"><br>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password"><br>
                        <button class="btn btn-primary" id="registerBtn">Register</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <!-- <button class="btn btn-primary" id="registerBtn">Register</button> -->
                    <button class="btn btn-default" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="loginModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sign in</h5>
                </div>
                <div class="modal-body">
                    <!-- <input type="text" id="userName" class="form-control" placeholder="Your Name"><br> -->
                    <form id="form-login" action="/login" method="post" onsubmit="return redirect()">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Your Email"><br>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password"><br>
                        <input class="btn btn-primary" id="loginBtn" type="submit">Sign In</input>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <h1 class="main-title translate" data-speed="0.3" >Discover.</h1>
    <div class="shortcutBtn" >
        <a href="#aboutContainer">
            <i class="material-icons shortcut">arrow_downward</i>
        </a>
    </div>

    <img src="images/arch-min.png" class="arch translate" data-speed="-0.25" alt="">
    <img src="images/bg1-min.png" class="bg1 translate" data-speed="-0.2" alt="">
    <img src="images/mountain-min.png" class="mountain translate" data-speed="0.2" alt="">
    <img src="images/sky-min.png" class="sky translate" data-speed="-0.2" alt="">

</header>
